<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvWHPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Work Hard, Play Hard"
        android:textSize="60dp"
        android:textColor="@color/white"
        android:layout_marginTop="115dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvPYP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Pick Your Poison:"
        android:textColor="@color/white"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/tvWHPH"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/btnPencil"
        android:background="@drawable/rounded_button"
        android:scaleType="fitCenter"
        android:src="@drawable/pencil"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tvPYP"
        android:layout_marginLeft="15dp"
        android:layout_alignStart="@+id/tvPYP" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/btnCup"
        android:background="@drawable/rounded_button"
        android:scaleType="fitCenter"
        android:src="@drawable/redsolocup"
        android:layout_alignTop="@+id/btnPencil"
        android:layout_marginRight="15dp"
        android:layout_alignEnd="@+id/tvPYP" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infobtn"
        android:src="@drawable/ic_dialog_info"
        android:background="@null"
        android:layout_alignParentRight="true" />


</RelativeLayout>